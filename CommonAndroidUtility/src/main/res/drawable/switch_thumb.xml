<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
            <size android:height="@dimen/switch_size" android:width="@dimen/switch_size"/>
            <stroke android:width="1dp" android:color="#8c8c8c"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
            <size android:height="@dimen/switch_size" android:width="@dimen/switch_size"/>
            <stroke android:width="1dp" android:color="#34c759"/>
        </shape>
    </item>
</selector>
